{
  "name": "monei-php-sdk",
  "version": "2.6.1",
  "description": "MONEI PHP SDK",
  "author": "monei",
  "scripts": {
    "build": "openapi-generator-cli generate --generator-key monei-php",
    "build:local": "openapi-generator-cli generate --generator-key monei-php-local",
    "release": "release-it"
  },
  "license": "MIT",
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "2.17.0",
    "@release-it/bumper": "^7.0.1",
    "release-it": "^18.1.2"
  },
  "release-it": {
    "git": {
      "tagName": "${version}",
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "after:bump": "yarn run build && git add -A"
    },
    "plugins": {
      "@release-it/bumper": {
        "out": [
          {
            "file": "config.json",
            "path": "artifactVersion"
          },
          "../lib/MoneiClient.php"
        ]
      }
    }
  },
  "packageManager": "yarn@4.7.0"
}
