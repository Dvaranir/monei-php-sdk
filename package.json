{
  "name": "monei-php-sdk",
  "version": "2.6.8",
  "description": "MONEI PHP SDK",
  "author": "monei",
  "scripts": {
    "build": "openapi-generator-cli generate --generator-key monei-php && yarn postbuild",
    "build:local": "openapi-generator-cli generate --generator-key monei-php-local && yarn postbuild",
    "release": "release-it",
    "cs-fix": "composer cs-fix",
    "test": "composer test",
    "postbuild": "yarn cs-fix && yarn test",
    "prepare": "husky",
    "commitlint": "commitlint --edit"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@openapitools/openapi-generator-cli": "2.17.0",
    "@release-it/bumper": "^7.0.1",
    "@release-it/conventional-changelog": "^10.0.0",
    "husky": "^9.0.11",
    "release-it": "^18.1.2"
  },
  "release-it": {
    "git": {
      "tagName": "${version}",
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "after:bump": "yarn run build && yarn run postbuild && git add -A"
    },
    "plugins": {
      "@release-it/bumper": {
        "out": [
          {
            "file": "config.json",
            "path": "artifactVersion"
          },
          "lib/MoneiClient.php"
        ]
      },
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  },
  "packageManager": "yarn@4.7.0"
}
